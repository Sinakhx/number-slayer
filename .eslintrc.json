{
    "env": {
        "browser": true,
        "es2022": true,
        "jest": true
    },
    "extends": [
        "airbnb-base",
        "airbnb-typescript",
        "plugin:import/typescript",
        "plugin:jest/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "react/jsx-filename-extension": "off",
        "max-len": "off"
    },
    "ignorePatterns": [
        "node_modules/",
        "dist/"
    ]
}
